{% extends 'ProjetAppBundle::layout.html.twig' %}

{% block title %}Gestion des fiches{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Gestion de vos fiches</h1>
        </div>
    </div>
    <div class="col-lg-12" id="eventList">
        <div class="row">
            <div class="col-md-4">
                <div class="input-group">
                    <input type="text" class="form-control search" placeholder="Rechercher un projet...">
					<span class="input-group-btn">
						<button class="btn btn-default"><span class="glyphicon glyphicon-search"></span></button>
					</span>
                </div><!-- /input-group -->
            </div>
            <div class="col-md-2">
                <a type="button" href="{{ path('projet_app_fiche_new') }}" class="btn btn-success"><span class="glyphicon glyphicon-plus"></span>&nbsp;Nouveau Projet</a>
            </div>
        </div>
        <br>
        <div class="table-responsive">
            <table class="table table-bordered table-hover">
                <thead>
                <tr>
                    <th class="sort" data-sort="eventName">Libell√© <b class="caret"></b></th>
                    <th class="sort" data-sort="startDate">Adresse <b class="caret"></b></th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody class="list">

                {% for fiche in fiches %}
                    <tr>
                        <td><a class="eventName" href="{{ path('projet_app_fiche_show', {"id" : fiche.id}) }}">{{ fiche.libelle }}</a></td>
                        <td class="startDate">{{ fiche.addressString }}</td>
                        <td>
                            <a type="button" class="btn btn-default" href="{{ path('projet_app_fiche_edit', {"id" : fiche.id}) }}"><span class="glyphicon glyphicon-edit"></span>&nbsp;Modifier</a>
                            <a type="button" href="{{ path('projet_app_fiche_delete', {"id" : fiche.id}) }}" class="btn btn-default"><span class="glyphicon glyphicon-remove text-danger"></span>&nbsp;Supprimer</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
